<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.alpha.ghosty.automobilemanager.Reminders"
    style="@style/layoutStyle">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Reminder"
        android:id="@+id/addNewReminderBTN"
        android:onClick="redirect2AddNewReminder"
        android:drawableLeft="@drawable/add_r"
        android:layout_below="@+id/pageTitle" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/remindersLV"
        android:layout_below="@+id/addNewReminderBTN"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
